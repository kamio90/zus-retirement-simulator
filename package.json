{
  "name": "zus-retirement-simulator",
  "private": true,
  "version": "1.0.0",
  "description": "ZUS Retirement Simulator Monorepo",
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "scripts": {
    "dev": "pnpm --parallel --filter ./apps/api --filter ./apps/web dev",
    "build:data": "pnpm --filter ./packages/data build",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0"
  }
}
